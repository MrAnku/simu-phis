<?php

namespace App\Console\Commands;

use Illuminate\Console\Command;
use App\Services\PppCalculationService;
use App\Services\UserPppCalculationService;
use App\Models\Company;

class CalculateMonthlyPpp extends Command
{
    /**
     * The name and signature of the console command.
     */
    protected $signature = 'ppp:calculate-monthly';

    /**
     * The console command description.
     */
    protected $description = 'Calculate monthly PPP for companies from their creation date to current month';

    /**
     * The PPP calculation service.
     */
    protected $pppService;

    /**
     * The User PPP calculation service.
     */
    protected $userPppService;

    /**
     * Create a new command instance.
     */
    public function __construct(PppCalculationService $pppService, UserPppCalculationService $userPppService)
    {
        parent::__construct();
        $this->pppService = $pppService;
        $this->userPppService = $userPppService;
    }

    /**
     * Execute the console command.
     */
    public function handle()
    {
        // Run for all companies (cron behavior)
        $this->calculatePppForAllCompanies();
        
        // Also calculate user PPP for all companies
        $this->calculateUserPppForAllCompanies();

        return 0;
    }

    /**
     * Calculate PPP for all approved companies
     */
    private function calculatePppForAllCompanies()
    {        
        $companies = Company::where('approved', 1)
            ->where('role', null)
            ->where('service_status', 1)
            ->get();

        if ($companies->isEmpty()) {
            echo 'No companies found for PPP calculation.';
            return;
        }        
        $totalCompanies = count($companies);
        $successCount = 0;
        $failedCount = 0;
        $totalNewCalculations = 0;

        foreach ($companies as $company) {
            try {
                echo "Processing company: {$company->company_name} (ID: {$company->company_id})\n";                
                $results = $this->pppService->calculateHistoricalPppForCompany($company->company_id);
                
                if ($results !== false && !empty($results)) {
                    $newCalculations = 0;
                    $skippedCalculations = 0;
                    
                    // Check each result to see if it was newly calculated or already existed
                    foreach ($results as $result) {
                        if ($result->wasRecentlyCreated) {
                            $newCalculations++;
                            $totalNewCalculations++;
                            echo "PPP calculated for {$company->company_name} - {$result->month_year}: {$result->ppp_percentage}%\n";
                        } else {
                            $skippedCalculations++;
                        }
                    }
                    
                    if ($newCalculations > 0) {
                        echo "Success: {$company->company_name} - {$newCalculations} new months calculated, {$skippedCalculations} months already existed\n";
                    } else {
                        echo "{$company->company_name} - All PPP data already exists\n";
                    }
                    $successCount++;
                } else {
                    echo "{$company->company_name} - No data to calculate\n";
                    $failedCount++;
                }
            } catch (\Exception $e) {
                echo "{$company->company_name} - Error: " . $e->getMessage() . "\n";
                $failedCount++;
                continue;
            }
        }
    }

    /**
     * Calculate User PPP for all approved companies in batches
     */
    private function calculateUserPppForAllCompanies()
    {
        echo "\n=== Starting User PPP Calculation ===\n";
        
        $companies = Company::where('approved', 1)
            ->where('role', null)
            ->where('service_status', 1)
            ->get();

        if ($companies->isEmpty()) {
            echo 'No companies found for User PPP calculation.';
            return;
        }

        $totalCompaniesProcessed = 0;
        $totalUsersProcessed = 0;
        $totalNewCalculations = 0;

        foreach ($companies as $company) {
            try {
                echo "Processing users for company: {$company->company_name} (ID: {$company->company_id})\n";
                
                // Process users in batches of 50 to avoid high load
                $batchResults = $this->userPppService->calculatePppForCompanyUsersInBatches(
                    $company->company_id,
                    50 // batch size
                );
                
                if ($batchResults['total_users'] > 0) {
                    echo "‚úì User PPP: {$company->company_name} - {$batchResults['processed']}/{$batchResults['total_users']} users processed";
                    
                    if ($batchResults['new_calculations'] > 0) {
                        echo ", {$batchResults['new_calculations']} new calculations";
                    }
                    
                    if ($batchResults['errors'] > 0) {
                        echo ", {$batchResults['errors']} errors";
                    }
                    echo "\n";
                    
                    $totalUsersProcessed += $batchResults['processed'];
                    $totalNewCalculations += $batchResults['new_calculations'];
                } else {
                    echo "  ‚Üí {$company->company_name} - No users found for PPP calculation\n";
                }
                
                $totalCompaniesProcessed++;
                
                // Add delay between companies to reduce load
                if ($totalCompaniesProcessed < count($companies)) {
                    sleep(1); // 1 second delay between companies
                }
                
            } catch (\Exception $e) {
                echo "‚úó Error processing users for {$company->company_name}: " . $e->getMessage() . "\n";
                continue;
            }
        }

        echo "\n=== User PPP Calculation Summary ===\n";
        echo "Companies processed: {$totalCompaniesProcessed}\n";
        echo "Total users processed: {$totalUsersProcessed}\n";
        if ($totalNewCalculations > 0) {
            echo "üéØ New user PPP calculations: {$totalNewCalculations}\n";
        } else {
            echo "‚ÑπÔ∏è  No new user PPP calculations needed - all data already exists\n";
        }
    }
}